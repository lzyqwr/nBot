{
  "id": "greytip-guard",
  "name": "灰条攻击检测",
  "version": "1.0.2",
  "author": "nBot",
  "description": "检测并记录伪造灰条消息的攻击者，支持自动禁言",
  "type": "bot",
  "permissions": [],
  "signature": null,
  "builtin": true,
  "commands": [
    "灰条检测"
  ],
  "configSchema": [
    {
      "key": "auto_mute",
      "type": "boolean",
      "label": "自动禁言",
      "description": "检测到攻击时自动禁言攻击者",
      "default": false,
      "options": null,
      "itemType": null,
      "min": null,
      "max": null
    },
    {
      "key": "auto_recall",
      "type": "boolean",
      "label": "自动撤回",
      "description": "检测到攻击时尝试撤回消息（需要机器人是群管理员）",
      "default": true,
      "options": null,
      "itemType": null,
      "min": null,
      "max": null
    },
    {
      "key": "mute_duration",
      "type": "number",
      "label": "禁言时长(秒)",
      "description": "自动禁言的时长，默认86400秒(1天)",
      "default": 86400,
      "options": null,
      "itemType": null,
      "min": 60.0,
      "max": 2592000.0
    },
    {
      "key": "notify_admin",
      "type": "boolean",
      "label": "通知管理员",
      "description": "检测到攻击时在群内发送警告消息",
      "default": true,
      "options": null,
      "itemType": null,
      "min": null,
      "max": null
    },
    {
      "key": "watch_groups",
      "type": "array",
      "label": "监控群列表",
      "description": "要监控的群号列表（留空则监控所有群）",
      "default": [],
      "options": null,
      "itemType": "string",
      "min": null,
      "max": null
    }
  ],
  "config": {
    "watch_groups": [],
    "auto_mute": false,
    "auto_recall": true,
    "mute_duration": 86400,
    "notify_admin": true
  }
}