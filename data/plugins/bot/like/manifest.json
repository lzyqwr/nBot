{
  "id": "like",
  "name": "点赞系统",
  "version": "1.0.1",
  "author": "nBot",
  "description": "QQ点赞功能，支持每日限额和排行榜",
  "type": "bot",
  "permissions": [],
  "signature": null,
  "builtin": true,
  "commands": [
    "点赞",
    "赞",
    "zan",
    "like",
    "点赞榜",
    "赞榜",
    "点赞排行",
    "likerank"
  ],
  "configSchema": [
    {
      "key": "daily_limit",
      "type": "number",
      "label": "每日限额",
      "description": "每人每天对同一目标的点赞次数限制",
      "default": 10,
      "options": null,
      "itemType": null,
      "min": 1.0,
      "max": 100.0
    },
    {
      "key": "max_times_per_like",
      "type": "number",
      "label": "单次点赞数",
      "description": "每次点赞操作的点赞次数",
      "default": 10,
      "options": null,
      "itemType": null,
      "min": 1.0,
      "max": 20.0
    },
    {
      "key": "rank_limit",
      "type": "number",
      "label": "排行榜显示数量",
      "description": "排行榜显示的用户数量",
      "default": 10,
      "options": null,
      "itemType": null,
      "min": 5.0,
      "max": 50.0
    },
    {
      "key": "show_emoji",
      "type": "boolean",
      "label": "显示奖牌emoji",
      "description": "排行榜前三名是否显示奖牌emoji",
      "default": true,
      "options": null,
      "itemType": null,
      "min": null,
      "max": null
    }
  ],
  "config": {
    "daily_limit": 10,
    "max_times_per_like": 10,
    "rank_limit": 10,
    "show_emoji": true
  }
}
