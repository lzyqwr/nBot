{
  "id": "whitelist",
  "name": "白名单过滤",
  "version": "1.0.1",
  "author": "nBot",
  "description": "控制机器人只响应特定群聊或私聊消息，支持白名单/黑名单模式",
  "type": "bot",
  "permissions": [],
  "signature": null,
  "builtin": true,
  "commands": ["加白"],
  "configSchema": [
    {
      "key": "mode",
      "type": "select",
      "label": "过滤模式",
      "description": "白名单模式只响应列表中的群/用户，黑名单模式忽略列表中的群/用户",
      "default": "whitelist",
      "options": [
        {
          "value": "whitelist",
          "label": "白名单"
        },
        {
          "value": "blacklist",
          "label": "黑名单"
        }
      ],
      "itemType": null,
      "min": null,
      "max": null
    },
    {
      "key": "groups",
      "type": "array",
      "label": "群列表",
      "description": "群号列表（每行一个）",
      "default": [],
      "options": null,
      "itemType": "string",
      "min": null,
      "max": null
    },
    {
      "key": "allow_user_in_groups",
      "type": "boolean",
      "label": "群聊允许用户列表",
      "description": "群消息默认只按群列表过滤；开启后允许用户列表在群聊中生效（user 或 group 任一命中即通过）",
      "default": false,
      "options": null,
      "itemType": null,
      "min": null,
      "max": null
    },
    {
      "key": "users",
      "type": "array",
      "label": "用户列表",
      "description": "用户QQ号列表（每行一个）",
      "default": [],
      "options": null,
      "itemType": "string",
      "min": null,
      "max": null
    }
  ],
  "config": {
    "groups": [],
    "mode": "whitelist",
    "users": [],
    "allow_user_in_groups": false
  }
}
